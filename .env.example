# Database (Docker)
DB_PASSWORD=admin123
DATABASE_URL="postgresql://admin:admin123@postgres:5432/botrade?schema=public"

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# API Keys (GET THESE BEFORE RUNNING!)
FMP_API_KEY=your_fmp_key_here
OPENAI_API_KEY=your_openai_key_here
POLYGON_API_KEY=your_polygon_key_here
NEWSAPI_KEY=your_newsapi_key_here

# Interactive Brokers (TWS running on host)
IB_PORT=7497              # 7497 for paper trading, 7496 for live trading
IB_CLIENT_ID=1

# Trading Settings
MIN_CONFIDENCE=70         # Minimum AI confidence percentage to execute trade
MAX_POSITION_PCT=10       # Maximum percentage of portfolio per position
MAX_DAILY_TRADES=10       # Maximum number of trades per day

# Redis (Docker - managed by docker-compose)
REDIS_URL=redis://redis:6379

# Application
PORT=3000
